<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OutlineButtonStyle">
        <attr name="outLineButtonStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="TextButtonStyle">
        <attr name="textButtonStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="FlatButtonStyle">
        <attr name="flatButtonStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="RaisedButtonStyle">
        <attr name="raisedButtonStyle" format="reference" />
    </declare-styleable>


    <declare-styleable name="CustomEditText">

        <attr name="mTitle" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="hintColor" format="color" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
        <attr name="isSetLeftIconColor" format="boolean"/>
        <attr name="android:hint" format="string" />
        <attr name="android:gravity" format="integer" />
        <attr name="android:textColor" format="color" />
        <attr name="android:inputType" format="integer" />
        <attr name="android:maxLength" format="integer"/>
        <attr name="android:maxLines" format="integer"/>
        <attr name="android:imeOptions" />


    </declare-styleable>
    <declare-styleable name="SpannableTextView">
        <attr name="android:text" format="string"/>
        <attr name="android:gravity" format="integer"/>
        <attr name="highlightedTextColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="MyExpandableTextView">
        <attr name="android:text" format="string"/>
        <attr name="android:gravity" format="integer"/>
        <attr name="my_highlightedTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomToolbar">
        <attr name="android:background" format="color"/>
    </declare-styleable>

    <declare-styleable name="EmptyStateView">
        <attr name="esv_logo" format="reference"/>
        <attr name="esv_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ListItemView" >
        <attr name="liv_mIconColorRes"      format="color"/>
        <attr name="liv_mRightIconRes"      format="reference"/>
        <attr name="liv_mLeftIconRes"       format="reference"/>
        <attr name="liv_mTitleRes"          format="string"/>
        <attr name="liv_mTitle"             format="string"/>
        <attr name="liv_mSubTitle"          format="string"/>
        <attr name="liv_mSubTitleColorRes"  format="color"/>
        <attr name="liv_mBackGroundColorRes"  format="color"/>

        <attr name="liv_mRightItemType" format="enum">
            <enum name="right_none" value="1" />
            <enum name="right_icon" value="2" />
            <enum name="right_avatar" value="3" />
            <enum name="right_thumbnail" value="4" />
            <enum name="right_image" value="5" />
            <enum name="right_radio" value="6" />
            <enum name="right_checkbox" value="7" />
            <enum name="right_check" value="8" />

        </attr>
        <attr name="liv_mLeftItemType"        format="enum">
            <enum name="left_none"  value="1" />
            <enum name="left_icon"  value="2" />
            <enum name="left_switch" value="3" />
            <enum name="left_text" value="4" />
        </attr>

        <attr name="liv_mTextItemType" format="enum">
            <enum value="1" name="title_subtitle"/>
            <enum value="2" name="subtitle_title"/>
        </attr>
        <attr name="liv_mItemType" format="enum">
            <enum value="1" name="one_line"/>
            <enum value="2" name="two_line"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="Slider">
        <attr name="slider_hideIndicators" format="boolean" />
        <attr name="slider_indicatorSize" format="dimension" />
        <attr name="slider_selectedSlideIndicator" format="reference" />
        <attr name="slider_unselectedSlideIndicator" format="reference" />
        <attr name="slider_animateIndicators" format="boolean" />
        <attr name="slider_interval" format="integer" />
        <attr name="slider_loopSlides" format="boolean" />
        <attr name="slider_defaultBanner" format="integer" />
        <attr name="slider_emptyView" format="reference" />
    </declare-styleable>


    <declare-styleable name="SelectableRoundedImageView">
        <attr name="sriv_left_top_corner_radius" format="dimension" />
        <attr name="sriv_right_top_corner_radius" format="dimension" />
        <attr name="sriv_left_bottom_corner_radius" format="dimension" />
        <attr name="sriv_right_bottom_corner_radius" format="dimension" />
        <attr name="sriv_border_width" format="dimension" />
        <attr name="sriv_border_color" format="color" />
        <attr name="sriv_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="DonutProgress">
        <attr name="donut_progress" format="integer"/>
        <attr name="donut_max" format="integer"/>
        <attr name="donut_unfinished_color" format="color"/>
        <attr name="donut_finished_color" format="color"/>
        <attr name="donut_finished_stroke_width" format="dimension"/>
        <attr name="donut_unfinished_stroke_width" format="dimension"/>
        <attr name="donut_text_size" format="dimension"/>
        <attr name="donut_text_color" format="color"/>
        <attr name="donut_text" format="string"/>
        <attr name="donut_prefix_text" format="string"/>
        <attr name="donut_suffix_text" format="string"/>
        <attr name="donut_background_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ProfileCardViewTitleView">
        <attr name="title" format="string"/>
        <attr name="icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MottoBannerView">
        <attr name="motto" format="string"/>
        <attr name="logo" format="reference"/>
        <attr name="help" format="string"/>
        <attr name="more_str" format="string"/>
    </declare-styleable>

    <declare-styleable name="LeftArrowButton">
        <attr name="text" format="string"/>
        <attr name="color" format="color"/>
        <attr name="left_arrow_button_text_size" format="integer"/>
        <attr name="left_arrow_button_font_family" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MyAccountItemView">
        <attr name="my_account_item_title" format="string"/>
        <attr name="my_account_item_icon" format="reference"/>
        <attr name="my_account_item_value"  format="string"/>
        <attr name="my_account_item_icon_color" format="color"/>
        <attr name="my_account_item_title_color" format="color"/>
        <attr name="my_account_item_value_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="IncomeItemRow">
        <attr name="profile_income_item_title" format="string"/>
        <attr name="profile_income_item_title_text_size" format="float"/>
        <attr name="profile_income_item_title_text_color"  format="color"/>
        <attr name="profile_income_item_title_text_font"  format="reference"/>
        <attr name="profile_income_item_value_text" format="string"/>
        <attr name="profile_income_item_value_text_size" format="float"/>
        <attr name="profile_income_item_value_text_color" format="color"/>
        <attr name="profile_income_item_value_text_font" format="reference"/>
        <attr name="profile_income_item_unit_text_size" format="float"/>
        <attr name="profile_income_item_unit_text_color" format="color"/>
        <attr name="profile_income_item_unit_text_font" format="reference"/>
        <attr name="profile_income_item_unit_text" format="string"/>
    </declare-styleable>
</resources>